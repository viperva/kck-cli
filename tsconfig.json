{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es6"],
    "module": "Node16",
    "rootDir": "src",
    "resolveJsonModule": true,
    "outDir": "build",

    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
